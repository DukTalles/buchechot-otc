  $checked:
    border: 2 #ff7700
    background-color: #4a3520
  $hover !checked:
    background-color: #3d2d2d

  Panel
    id: itemBg
    anchors.left: parent.left
    anchors.verticalCenter: parent.verticalCenter
    margin-left: 3
    size: 32 32
